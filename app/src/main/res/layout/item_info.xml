<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="info"
            type="kr.co.devicechecker.data.dto.Info" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/none"
        android:layout_marginVertical="8dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{info.name}"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textFontWeight="900"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_info_value"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="정보 명 : "
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{info.value}"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:includeFontPadding="false"
            android:textColor="@color/mono700"
            app:layout_constraintTop_toBottomOf="@id/tv_info_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="4dp"
            android:layout_marginLeft="4dp"
            tools:text="내용"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="info"
            type="kr.co.devicechecker.data.dto.Info" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_gray100"
        android:elevation="4dp"
        android:shadowColor="@color/mono900"
        android:layout_marginVertical="4dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/none"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="24dp"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_percent="0.50"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{info.name}"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textFontWeight="900"
                android:includeFontPadding="false"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_center"
                tools:text="정보 명 : "
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{info.value}"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:includeFontPadding="false"
                android:textColor="@color/mono700"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_center"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="4dp"
                tools:text="내용"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>

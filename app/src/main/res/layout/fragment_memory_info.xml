<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.fragment.main.MemoryInfoFragment"
    >
    <data>
        <variable
            name="memoryInfoList"
            type="java.util.List&lt;kr.co.devicechecker.data.dto.Info>" />
        <variable
            name="internalStorageList"
            type="java.util.List&lt;kr.co.devicechecker.data.dto.StorageInfo>" />
        <variable
            name="externalStorageList"
            type="java.util.List&lt;kr.co.devicechecker.data.dto.StorageInfo>" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_percent="0.05"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_percent="0.95"
                />
            <!-- 주기억 장치 정보 -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ram_info_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_header_main_memory"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rv_ram_info"
                android:theme="@style/Header.DeviceChecker"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ram_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:infoList="@{memoryInfoList}"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintTop_toBottomOf="@id/tv_ram_info_title"
                app:layout_constraintBottom_toTopOf="@id/tv_internal_storage_title"
                />
            <!-- 내부 저장소 -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_internal_storage_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_header_internal_storage"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_ram_info"
                app:layout_constraintBottom_toTopOf="@id/rv_internal_storage"
                android:theme="@style/Header.DeviceChecker"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_internal_storage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:storageInfoList="@{internalStorageList}"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintTop_toBottomOf="@id/tv_internal_storage_title"
                app:layout_constraintBottom_toTopOf="@id/tv_external_storage_title"
                />
            <!-- 외부 저장소 -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_external_storage_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_header_external_storage"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_internal_storage"
                app:layout_constraintBottom_toTopOf="@id/rv_external_storage"
                android:theme="@style/Header.DeviceChecker"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_external_storage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:storageInfoList="@{externalStorageList}"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintTop_toBottomOf="@id/tv_external_storage_title"
                app:layout_constraintBottom_toTopOf="@id/sp_bottom"
                />
            <Space
                android:id="@+id/sp_bottom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/rv_external_storage"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
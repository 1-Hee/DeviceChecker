<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.activity.SettingActivity"
    >
    <data>
        <variable
            name="pStroage"
            type="kr.co.devicechecker.data.dto.Permission" />
        <variable
            name="version"
            type="String" />
        <variable
            name="click"
            type="kr.co.devicechecker.base.listener.ViewClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_setting_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/l_setting_info"
            android:paddingVertical="12dp"
            android:theme="@style/MainHeader.DeviceChecker"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_back"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="16dp"
                android:onClick="@{(v)->click.onViewClick(v)}"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_app_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_setting"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/l_setting_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/l_setting_header"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guide_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:textColor="@color/mono600"
                android:text="@string/txt_guide_permission"
                />
            <include
                android:id="@+id/stroage_permisson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:permission="@{pStroage}"
                layout="@layout/layout_app_permission"
                android:layout_marginVertical="8dp"
                />
            <!-- 버전 정보 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_version_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_app_version_header"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_version"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{version}"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/mono700"
                    android:textAlignment="center"
                    app:layout_constraintStart_toEndOf="@id/tv_version_header"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="1.0.0"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- 오픈소스 라이선스 -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/txt_opensource"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:layout_marginVertical="16dp"
                android:onClick="@{(v)->click.onViewClick(v)}"
                />
            <!-- 개발자 연락처 -->
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
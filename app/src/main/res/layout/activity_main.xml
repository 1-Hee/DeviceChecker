<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MainActivity"
    >
    <data>
        <variable
            name="deviceInfo"
            type="kr.co.devicechecker.data.dto.DeviceInfo" />
        <variable
            name="path"
            type="String" />
        <!-- 탭 리스너 -->
        <variable
            name="tabListener"
            type="com.google.android.material.tabs.TabLayout.OnTabSelectedListener" />
        <!-- 뷰페이저를 위한 값 -->
        <variable
            name="vpAdapter"
            type="kr.co.devicechecker.ui.adapter.ViewPager2Adapter" />
        <variable
            name="vpCallback"
            type="androidx.viewpager2.widget.ViewPager2.OnPageChangeCallback" />
    </data>

    <!-- todo theme로 적용.. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray100"
        >

        <!-- header -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/l_app_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal500"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tl_check_menu"
            android:paddingVertical="12dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_app_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:scaleType="fitXY"
                />
            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textColor="@color/light_gray100"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

<!--        <androidx.constraintlayout.widget.Guideline-->
<!--            android:id="@+id/gl_start"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:orientation="vertical"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintGuide_percent="0.2"-->
<!--            />-->
<!--        <androidx.constraintlayout.widget.Guideline-->
<!--            android:id="@+id/gl_end"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:orientation="vertical"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintGuide_percent="0.8"-->
<!--            />-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_check_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabIndicatorColor="@color/claret300"
            app:tabTextColor="@color/mono300"
            app:tabSelectedTextColor="@color/claret400"
            app:tabRippleColor="@color/mono100"
            android:clipToPadding="false"
            app:tabInlineLabel="true"
            app:layout_constraintTop_toBottomOf="@id/l_app_header"
            app:layout_constraintBottom_toTopOf="@id/vp_check_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/none"
            android:onTabSelectedListener="@{tabListener}"
            >
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_device_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디바이스 정보"
                android:textSize="16sp"
                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_system_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로세서 정보"
                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_memory_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모리 정보"
                android:textSize="16sp"
                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_sensor_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="센서 정보"
                />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_check_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tl_check_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/mono200"
            app:vpAdapter="@{vpAdapter}"
            app:vpCallback="@{vpCallback}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="coreInfo"
            type="kr.co.devicechecker.data.dto.CpuCoreInfo" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_gray100"
        android:elevation="4dp"
        android:shadowColor="@color/mono900"
        android:layout_marginVertical="4dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/none"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_percent="0.40"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_percent="0.25"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_chip"
                android:tint="@color/mono600"
                android:layout_marginRight="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_core_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{coreInfo.name}"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textFontWeight="900"
                android:includeFontPadding="false"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/gl_center"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                tools:text="정보 명 : "
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tv_core_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{@string/txt_h_core_min+`\t`+coreInfo.minHz}"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:includeFontPadding="false"
                android:textColor="@color/mono700"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toBottomOf="@id/gl_center"
                app:layout_constraintBottom_toTopOf="@id/tv_tv_core_max"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="4dp"
                tools:text="최소 주사율"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tv_core_max"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{@string/txt_h_core_max+`\t`+coreInfo.maxHz}"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:includeFontPadding="false"
                android:textColor="@color/mono700"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_tv_core_min"
                app:layout_constraintBottom_toTopOf="@id/tv_tv_core_latency"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="4dp"
                tools:text="최대 주사율"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tv_core_latency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{@string/txt_h_core_latency+`\t`+coreInfo.transitionLatency}"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:includeFontPadding="false"
                android:textColor="@color/mono700"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_tv_core_max"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="4dp"
                tools:text="지연 시간"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/mono300">
    <item
        android:id="@android:id/background"
        android:state_checked="false"
        >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <size
                android:width="28dp"
                android:height="28dp" />
            <solid
                android:color="@color/mono600" />
        </shape>
    </item>
    <item android:id="@android:id/background" android:state_checked="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <size
                android:width="24dp"
                android:height="24dp" />
            <solid
                android:color="@color/white" />
        </shape>
    </item>
</ripple>

